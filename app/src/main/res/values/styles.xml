<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallBoldFont" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/space_grotesk</item>
    </style>

    <style name="TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/space_grotesk</item>
    </style>

    <style name="TitleMediumBold" parent="TitleMedium">
        <item name="android:textSize">17sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/space_grotesk</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="TabMedium" parent="TitleMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/lightBluishGrey</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.Material3.Dark">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CustomCardTheme" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/bluishGrey</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
